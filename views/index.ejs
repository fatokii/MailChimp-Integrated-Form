<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;900&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>   
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">

    <link rel="stylesheet" href="assets/css/style.css">

    <link rel="icon" type="image/x-icon" href="assets/favicon_io/favicon.ico">

    <title>MailChimp Integrated Form</title>
</head>
<body>
    <section id="main-section">
        

        <form action="/" method="post">
            
            <h1><i class="fa fa-user-circle fa-3x"></i>Sign up for our Newsletter</h1>

            <div class="input-group">
                <div class="input-group-prepend">
                  <div class="fa fa-user input-group-text"></div>
                </div>
                <input name="fname" class="form-control mb-3" type="text" placeholder="First Name *" required>
            </div>


            <div class="input-group">
                <div class="input-group-prepend">
                  <div class="fa fa-user input-group-text"></div>
                </div>
                <input name="lname" class="form-control mb-3" type="text" placeholder="Last Name *" required>
            </div>

            <!-- <label>Email Address *</label> -->
            <div class="input-group">
                <div class="input-group-prepend">
                  <div class="fa fa-envelope input-group-text"></div>
                </div>
                <input name="email" class="form-control mb-3" type="email" placeholder="Email Address *" required>
            </div>

            <!-- <p>by clicking signup, you'll start getting emails from us</p> -->

            <button type="submit" class="btn btn-md btn-dark">sign up!</button>
        </form>
    </section>

    
</body>

<script>

    let bars = document.querySelector(".fa-bars");
    let sidePane = document.querySelector(".side-pane");
    let sidePaneStatus = "in";

    bars.addEventListener("click", function(){
        if (sidePaneStatus == "in"){
            sidePane.style.right = "0";
            sidePaneStatus = "out";
            bars.classList = "fa fa-times";
        } else {
            sidePane.style.right = "-300px";
            sidePaneStatus = "in";
            bars.classList = "fa fa-bars";
        }
        
    })

</script>


</html>